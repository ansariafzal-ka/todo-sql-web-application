<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SQL TODO WEB APPLICATION</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <main
      class="min-w-full min-h-screen bg-gray-200 flex justify-center items-center"
    >
      <div class="p-5 bg-white text-center shadow-md rounded-lg">
        <h1 class="mb-4 text-xl font-medium">TODO APPLICATION</h1>
        <form action="http://localhost:5000/" method="post">
          <input
            type="text"
            name="task"
            id="task"
            placeholder="Add a new task"
            class="px-4 py-2 border"
            required
          />
          <button
            type="submit"
            class="px-4 py-2 bg-blue-600 text-white font-medium"
          >
            Add
          </button>
        </form>
        <div
          class="min-w-full mt-3 flex flex-col justify-center items-center gap-3"
        >
          <% tasks.forEach((task) => { %>
          <div
            class="min-w-full p-3 bg-gray-200 flex justify-between items-center shadow-md rounded-md"
          >
            <h1><%= task.task %></h1>
            <form
              action="http://localhost:5000/delete/<%= task.id%>"
              method="post"
            >
              <button type="submit" class="text-red-600 font-medium">
                delete
              </button>
            </form>
          </div>
          <% }) %>
        </div>
      </div>
    </main>
  </body>
</html>
